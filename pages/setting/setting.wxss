page{
  background:#1b1b1b;
}
.search-block{
  width: calc(100% - 40rpx);
  padding:20rpx;
  background: #1b1b1b;
  position: fixed;
  top:0;left: 0;
  display: flex;
  align-items: center;
}
.search-block>input{
  padding:0 20rpx;
  border:4rpx solid #666;
  background:#000;
  width: 100%;
  height: 50rpx;
  min-height: 50rpx;
  line-height: 50rpx;
}
.search-block>icon{
  position: absolute;
  right: 40rpx;
  z-index: 10;
}
.input-block{
  color:#666;
  font-size: 22rpx;
}
.setting-list{
  margin-top: 90rpx;
  width: calc(100% - 40rpx);
  padding:10rpx 20rpx;
  color:#fff;
}
.list-item{
  display: flex;
  align-items: center;
  height: 80rpx;
  margin:10rpx 0;
}
.icons{
  width: 70rpx;
  height: 60rpx;
  font-size:55rpx;
  line-height: 60rpx;
  text-align: left;
}
.setting-name{
  font-size:24rpx;
  height: 70rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.main-name,.sub-name{
  line-height: 30rpx;
}
.sub-name{
  color:#999;
}